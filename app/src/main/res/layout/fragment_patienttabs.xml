<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.patientTabFragments.ParentPatientDetailsFragment">



        <TextView
            android:id="@+id/patient_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAlignment="center"


            android:background="#8FCB95"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patient_details_title"
            app:tabBackground="@color/darkerGreen"
            app:tabTextColor="@color/white"
            app:tabIndicatorColor="#D4C672"
            app:tabIndicatorHeight="6dp"

            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/patientPager"
            android:layout_below="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />










<!--    </androidx.viewpager.widget.ViewPager>-->

</RelativeLayout>