<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient_list_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selected_patient_session_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/all_patients_adapter_patient_icon" />

    <androidx.appcompat.widget.AppCompatTextView

        android:id="@+id/selected_patient_session_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selected_patient_session_image"
        android:layout_toEndOf="@+id/selected_patient_session_image"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"

        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:id="@+id/selected_patient_session_line_break_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selected_patient_session_id"
        android:layout_toEndOf="@+id/selected_patient_session_id"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"

        android:textColor="@color/darkerGreen"
        android:textSize="15sp"
        android:text="@string/list_line_break"
        />

    <androidx.appcompat.widget.AppCompatTextView

        android:id="@+id/selected_patient_session_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selected_patient_session_line_break_1"
        android:layout_toEndOf="@+id/selected_patient_session_line_break_1"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_patient_session_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"

        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"

        android:textColor="@color/black"
        android:textSize="15sp"

        tools:ignore="RelativeOverlap" />


</RelativeLayout>