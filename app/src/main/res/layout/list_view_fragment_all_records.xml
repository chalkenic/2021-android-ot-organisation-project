<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient_list_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_record_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#0F3325"

        android:textSize="18sp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selected_record_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/all_patients_adapter_patient_icon" />

    <androidx.appcompat.widget.AppCompatTextView

        android:id="@+id/selected_record_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selected_record_image"
        android:layout_toEndOf="@+id/selected_record_image"
        android:layout_centerVertical="true"
        android:paddingTop="20dp"

        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_record_line_break_1"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selected_record_id"
        android:layout_toEndOf="@+id/selected_record_id"
        android:layout_centerVertical="true"
        android:paddingTop="20dp"

        android:textColor="@color/darkerGreen"
        android:textSize="15sp"
        android:text="@string/list_line_break"
        />

    <androidx.appcompat.widget.AppCompatTextView

        android:id="@+id/selected_record_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/selected_record_line_break_1"
        android:layout_toEndOf="@+id/selected_record_line_break_1"
        android:layout_centerVertical="true"
        android:paddingTop="20dp"

        android:textColor="@color/black"
        android:textSize="14sp"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"

        android:paddingTop="20dp"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"

        android:textColor="@color/black"
        android:textSize="15sp"

        tools:ignore="RelativeOverlap" />

</RelativeLayout>