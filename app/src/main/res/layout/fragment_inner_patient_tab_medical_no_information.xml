<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/medical_tab_no_info_title"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        >

    <androidx.appcompat.widget.AppCompatTextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_tab_medical_no_info_title"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/patient_tab_basic_container"
        android:layout_width="380dp"
        android:layout_height="400dp"
        android:layout_marginTop="2dp"

        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/medical_tab_no_info_title">

    <androidx.cardview.widget.CardView
        android:id="@+id/patient_tab_basic_photo_frame"
        android:background="@drawable/border_image_circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="75dp">



        <ImageButton
            android:id="@+id/patient_medical_tab_no_info_button"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_add_new_item"
            android:contentDescription="@string/patient_tab_basic_plus_symbol_if_no_image_added" />

    </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>